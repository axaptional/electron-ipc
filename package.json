{
  "name": "@axaptional/electron-ipc",
  "version": "0.2.1",
  "description": "An easy-to-use wrapper around Electron's inter-process communication API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "lint": "tslint -p tsconfig.json",
    "lint:fix": "tslint -p tsconfig.json --fix",
    "docs:build": "compodoc -d docs -p tsconfig.json --theme readthedocs",
    "docs:serve": "compodoc -d docs -r 4201 -s -o",
    "docs:review": "npm run doc:build && npm run doc:serve",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "git add -A src docs",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "electron",
    "ipc",
    "process",
    "communication"
  ],
  "author": {
    "name": "Andr√© Mategka",
    "email": "12amdeveloper@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/axaptional/electron-ipc.git"
  },
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "directories": {
    "lib": "dist",
    "doc": "docs"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.8",
    "tslint": "^5.12.1",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.3.3"
  },
  "optionalDependencies": {
    "bluebird": "^3.5.3"
  },
  "dependencies": {
    "any-promise": "^1.3.0",
    "electron": "^4.0.4"
  }
}
